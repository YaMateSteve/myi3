#!/bin/bash

## Get home directory
user=$(who | awk '{print $1}')
home=/home/$user/
## Downloads
pacman -Sy intel-ucode xf86-input-libinput networkmanager network-manager-applet ttf-inconsolata otf-font-awesome dmenu acpi upower tlp ranger gedit compton feh lxappearance rxvt-unicode urxvt-perls pulseaudio pulseaudio-alsa alsa-utils arc-gtk-theme

## Distribute config files
cp config_files/i3config $home.config/i3/config
cp config_files/i3blocks.conf $home.config/i3/i3blocks.conf
cp config_files/Xresources $home.Xresources
cp config_files/bashrc $home.bashrc
cp config_files/vimrc $home.vimrc
chown $user $home.config/i3/config $home.Xresources $home.bashrc
mkdir $home.scripts
cp -r scripts/* $home.scripts

## Enable wifi applet
systemctl enable NetworkManager.service
systemctl disable dhcpcd@eno1.service
systemctl disable netctl-auto@wlo1.service


## Setup touchpad
echo '
Section "InputClass"
    Identifier "libinput touchpad catchall"
    MatchIsTouchpad "no"
    MatchDevicePath "/dev/input/event*"
    Option "NaturalScrolling" "true"
    Option "Tapping" "on"
    Driver "libinput"
EndSection' >> /usr/share/X11/xorg.conf.d/40-libinput.conf

