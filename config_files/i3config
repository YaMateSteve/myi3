
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Cantarell Regular 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

######################
## PROGRAM BINDINGS ##
######################

set $term     exec urxvt 
set $browser  exec firefox
set $browser_class Firefox

####################
## POP UP WINDOWS ##
####################

# Dropdown terminal - $mod+u #
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 625 460
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 3
exec --no-startup-id $term -name dropdown
bindsym $mod+u [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center

# Math teminal (python shell) - $mod+i #
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 1000 500
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 3
exec --no-startup-id $term -name math -fn xft:monaco:pixelsize=24 -e python -q
bindsym $mod+i [instance="math"] scratchpad show; [instance="math"] move position center

# Password manager - $mod+p #
for_window [instance="bitwarden"] floating enable
for_window [instance="bitwarden"] resize set 600 900
for_window [instance="bitwarden"] move position center
bindsym $mod+p exec bitwarden; 

##########################
## PROGRAM KEY BINDINGS ##
##########################

# Open terminal
bindsym $mod+Return $term -name terminal

# Atom
bindsym $mod+a exec atom
for_window [class="Atom"] border pixel 0

# dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -l 10

# Libre office
bindsym $mod+o exec libreoffice --nologo
for_window [class="libreoffice"] border pixel 0

for_window [class="Toplevel"] border pixel 0
#for_window [class="Toplevel"] floating enable move right 361px, move up 54px
for_window [class="Toplevel"] resize set 600 700

# Ranger
bindsym $mod+r $term -e ranger

#########################
## Window key bindings ##
#########################

# switch windows back and forth
bindsym $mod+Tab workspace back_and_forth

# kill focused window
bindsym $mod+Shift+q kill

# Change gaps
bindsym $mod+Shift+z gaps outer current plus 5; gaps inner current plus 5
bindsym $mod+Shift+x gaps outer current minus 5; gaps inner current minus 5

# Move window
bindsym $mod+Shift+Left move left 30
bindsym $mod+Shift+Down move down 30
bindsym $mod+Shift+Up move up 30
bindsym $mod+Shift+Right move right 30

# Resize window
bindsym $mod+Shift+h resize shrink width
bindsym $mod+Shift+j resize shrink height
bindsym $mod+Shift+k resize grow height
bindsym $mod+Shift+l resize grow width
bindsym $mod+z resize grow height; resize grow width
bindsym $mod+x resize shrink height; resize shrink width

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+b focus parent

# focus the child container
#bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 ""
set $ws2 ""
set $ws3 ""
set $ws4 "4"
set $ws5 ""
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "Config"

# switch to workspace
bindsym $mod+1 workspace $ws1; exec ~/.scripts/i3config/browser.sh
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3; exec ~/.scripts/i3config/atom.sh
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5; exec ~/.scripts/i3config/libreoffice.sh
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10; exec ~/.scripts/i3config/config.sh

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Set colours
set $active_border       #5294e2
set $inactive_border     #000000
set $bg-color            #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676e7d
set $urgent-bg-color     #e53935
set $pink                #9900bb

#window colours
#                       Border             Background         Text                 Indicator
client.focused          $active_border     $active_border     $text-color          $pink
client.unfocused        $inactive_border   $inactive_border   $inactive-text-color #3b5998
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #3b5998
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          #3b5998

###############
### BORDERS ###
###############

gaps outer 5
gaps inner 5
for_window [class="^.*"] border pixel 2
for_window [instance="terminal"] border pixel 2
for_window [class="Atom"] border pixel 2
for_window [class="Firefox"] border pixel 2
for_window [class="feh"] border pixel 0; hide_edge_borders both
for_window [class="Electron"] floating enable




# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        #status_command i3status
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
	font pango: Cantarell, Font Awesome 5 Free 10

        colors{
               background $bg-color
               separator  $pink
               #                  Border             Background         Text
               focused_workspace  $active_border     #366666            $text-color
               inactive_workspace $inactive-bg-color $inactive-bg-color #366666
               urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
        }
}

###########################
### WALLPAPER / EFFECTS ###
###########################

exec --no-startup-id feh --bg-max ~/Pictures/image1.jpg
exec compton -f

#######################
## START-UP PROGRAMS ##
#######################

exec --no-startup-id nm-applet
exec --no-startup-id i3-msg 'workspace $ws2; $term -name terminal'

### Assign workspaces ###

assign [class="$browser_class"] $ws1
assign [class="Atom"] $ws3
assign [class="libreoffice"] $ws5


### Audio ###

# Pulse Audio mechanical buttons config
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%; exec ~/.scripts/i3blocks/volume-run.sh #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%; exec ~/.scripts/i3blocks/volume-run.sh #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle; exec ~/.scripts/i3blocks/volume-run.sh # mute sound

# Other stuff
workspace_auto_back_and_forth yes      
